# BetHub Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE (Required)
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# FEATURE FLAGS (Development)
# =============================================================================
# Enable/disable features for development and testing
AI_ANALYSIS_ENABLED=true
REALTIME_ENABLED=true
PAYMENTS_ENABLED=true
ANALYTICS_ENABLED=true
SOCIAL_FEATURES_ENABLED=false

# =============================================================================
# USAGE LIMITS (Development)
# =============================================================================
# Configure limits for development environment
FREE_ANALYSES_LIMIT=10
MAX_REALTIME_CONNECTIONS=50
API_RATE_LIMIT=1000

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Development and debugging tools
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_MOCK_DATA=true
