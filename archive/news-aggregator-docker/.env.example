# News Aggregator Environment Variables
# Copy this file to .env and fill in your values

# ======================
# Database Configuration
# ======================
# MongoDB Atlas Free Tier Connection String
# Get this from: https://cloud.mongodb.com/
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/match_news_aggregator?retryWrites=true&w=majority

# ======================
# API Keys (All Optional)
# ======================

# Reddit API (Free)
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Guardian API (Free tier: 5,000 calls/day)
# Get from: https://open-platform.theguardian.com/access/
GUARDIAN_API_KEY=your_guardian_api_key

# NewsData.io API (Free tier: 200 calls/day)
# Get from: https://newsdata.io/
NEWSDATA_API_KEY=your_newsdata_api_key

# Currents API (Free tier: 600 calls/day)
# Get from: https://currentsapi.services/
CURRENTS_API_KEY=your_currents_api_key

# ======================
# Application Settings
# ======================
LOG_LEVEL=INFO
PORT=8000

# Cache settings
CACHE_DIRECTORY=/tmp/match_news_cache
CACHE_TTL_SECONDS=3600

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=120

# ======================
# Deployment Settings
# ======================
# Set to 'production' for production deployment
ENVIRONMENT=development

# CORS settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# ======================
# Free Tier Optimizations
# ======================
# Maximum articles to store (MongoDB 512MB limit)
MAX_ARTICLES_STORAGE=500000

# Cleanup settings
CLEANUP_INTERVAL_HOURS=24
ARTICLE_RETENTION_DAYS=30
CONTEXT_RETENTION_DAYS=7

# ======================
# Optional: Redis Cache
# ======================
# If you want to use Redis instead of file-based cache
# REDIS_URL=redis://localhost:6379

# ======================
# Optional: Monitoring
# ======================
# Sentry for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn

# ======================
# Development Settings
# ======================
# Set to 'true' for development mode
DEBUG=false

# Hot reload for development
RELOAD=false